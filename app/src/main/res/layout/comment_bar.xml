<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_bar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/send_comment_hint"
            android:textSize="16sp"/>

        <FrameLayout
            android:id="@+id/like_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <xyz.dcme.library.widget.CheckableImageView
                android:id="@+id/appreciate_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_favor"
                android:contentDescription="@string/like"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/post_insert_photo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="@string/insert_photo"
                android:src="@drawable/ic_pic"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>