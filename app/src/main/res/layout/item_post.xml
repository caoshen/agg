<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_default_avatar"/>

        <TextView
            android:id="@+id/post_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/post_item_inner_margin"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/post_last_visit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/post_item_inner_margin"
            android:text="@string/right_now"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/post_item_inner_margin"
        android:gravity="center_vertical"
        android:text="@string/welcome_to_gg_community"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/post_item_inner_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_count"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/post_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_item_inner_margin"
            android:text="@string/read_count"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/post_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/post_item_inner_margin"
            android:text="@string/like_count"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
