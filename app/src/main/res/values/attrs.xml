<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseTheme">
        <attr name="actionBarInsetStart" format="dimension"/>
    </declare-styleable>
    
    <!--FlowLayout custom attributes-->
    <declare-styleable name="FlowLayout">
        <attr name="gravity">
            <enum name="left">-1</enum>
            <enum name="center">0</enum>
            <enum name="right">1</enum>
        </attr>
    </declare-styleable>
    
    <declare-styleable name="AvatarImageBehavior">
        <attr name="startXPosition" format="dimension"/>
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="AvatarView">
        <attr name="avatar" format="integer"/>
    </declare-styleable>

</resources>