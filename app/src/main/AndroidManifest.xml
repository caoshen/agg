<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="xyz.dcme.agg">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- Third party SDK permissions-->
    <!-- Tencent Bugly -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>

    <application
        android:name=".AggApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light">

        <!-- Tencent Bugly begin a-->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="2d0424a759"/>
        <meta-data
            android:name="BUGLY_ENABLE_DEBUG"
            android:value="true"/>
        <!-- Tencent Bugly end -->

        <activity
            android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.postdetail.PostDetailActivity"
            android:label="@string/post_detail"
            android:theme="@style/PostDetailTheme">
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"/>

        <activity
            android:name=".ui.personal.PersonalInfoActivity">
            <intent-filter>
                <data
                    android:host="www.guanggoo.com"
                    android:pathPrefix="/u"
                    android:scheme="http"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.topic.TopicActivity"/>

        <activity
            android:name=".ui.reply.ReplyActivity"/>

        <activity
            android:name=".ui.favorite.FavoriteActivity"/>

        <activity
            android:name=".ui.settings.SettingsActivity"/>

        <activity
            android:name=".ui.node.NodeChooseActivity"/>

        <activity
            android:name=".ui.publish.PublishActivity"
            android:label="@string/publish"
            android:windowSoftInputMode="stateVisible|adjustResize"/>

        <activity android:name=".ui.node.NodeManagerActivity"/>
        <activity android:name=".ui.node.TagSelectActivity"/>

        <service android:name=".service.NotificationService"/>

        <provider
            android:name=".database.ContentProviders"
            android:authorities="xyz.dcme.agg.provider"
            android:exported="false"/>
    </application>

</manifest>